rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Public reads for the two collections you query on the homepage
    match /activity/{doc} {
      allow read: if true;
    }
    match /puzzles/{doc} {
      allow read: if true;
    }
    
    // Users can read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // (Optional) keep writes open during dev; remove for prod
    match /{document=**} {
      allow write: if request.time < timestamp.date(2025, 10, 9);
    }
  }
}
